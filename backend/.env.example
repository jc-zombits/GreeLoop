# Configuración de la aplicación
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de datos PostgreSQL
DATABASE_URL=postgresql+asyncpg://greenloop_user:your_password@localhost:5432/greenloop_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=greenloop_db
DATABASE_USER=greenloop_user
DATABASE_PASSWORD=your_password

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@greenloop.com
EMAILS_FROM_NAME=GreenLoop

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# Redis (opcional para cache)
REDIS_URL=redis://localhost:6379/0

# Configuración de desarrollo
RELOAD=true
LOG_LEVEL=info